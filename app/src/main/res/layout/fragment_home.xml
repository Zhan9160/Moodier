<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_change"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/linearLayout_left"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3">

        <Button
            android:id="@+id/set_goal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_setgoal_activity"
            android:text="@string/set_a_goal"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/moodRecord_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="go_to_moodhistory"
            android:text="@string/view_mood_record"
            tools:ignore="OnClick" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_right"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout_left"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3">

        <Button
            android:id="@+id/set_mood_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_logmood_activity"
            android:text="@string/log_your_mood"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/user_information_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="get_mylog_activity"
            android:text="@string/user_info_page"
            tools:ignore="OnClick" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="407dp"
        android:layout_height="274dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout_right"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout_left"
        app:layout_constraintStart_toEndOf="@+id/linearLayout_left"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="5dp"
                    android:background="#E6E6E6"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/p1"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/dot_focus" />

                    <View
                        android:id="@+id/p2"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/p3"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/dot_normal" />

                    <View
                        android:id="@+id/p4"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/dot_normal" />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout_left"
        app:layout_constraintStart_toEndOf="@+id/linearLayout_left"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_right">

        <TextView
            android:id="@+id/top_goal1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="start|top" />

        <TextView
            android:id="@+id/top_goal2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="start|top" />

        <TextView
            android:id="@+id/top_goal3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="start|top" />
        <!--        <ListView-->
        <!--            android:id="@+id/home_goal_listview"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent" />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>