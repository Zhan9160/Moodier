<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetGoal2"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnCancelCate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />

    <TextView
        android:id="@+id/goalCateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To help kee you motivated towards achieving your goal, start with an area"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:background="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/treatGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text=" Treatment\n Create Goals around managing your medication and working with your care team"
            android:focusable="true"></TextView>
    </LinearLayout>


</LinearLayout>